#!/usr/bin/env bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )/.."

if [ "$1" = "cli" ]; then
  react-native init $2
elif [ "$1" = "crna" ]; then
  create-react-native-app $2
elif [ "$1" = "expo" ]; then
  exp init -t blank $2
else
  echo "Unknown project type; enter one of: cli, crna, expo"
  exit 1
fi

cd $2
git init .
git add .
git commit -m "Create react native app with $1"

rm App.test.js
cp "${DIR}/template/App.js" App.js
git add .
git commit -m "Remove boilerplate"

yarn add -D eslint \
            babel-eslint \
            eslint-config-codingitwrong \
            eslint-plugin-import \
            eslint-plugin-jsx-a11y \
            eslint-plugin-react
cp "${DIR}/template/.eslintrc.js" .eslintrc.js
git add .
git commit -m "Add ESLint"

if [ "$1" = "cli" ]; then
  yarn remove jest \
              babel-jest
  yarn add detox \
           mocha \
           babel-polyfill
  git add .
  git commit -m "Add Detox"
fi
