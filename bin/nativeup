#!/usr/bin/env bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )/.."

if [ "$1" = "cli" ]; then
  react-native init $2 --version 0.56.1
elif [ "$1" = "expo" ]; then
  expo init -t blank $2
else
  echo "Unknown project type; enter one of: cli, expo"
  exit 1
fi

cd $2
git init .
git add .
git commit -m "Create react native app with $1"

if [ "$1" = "expo" ]; then
  yarn add --dev jest-expo
  git add .
  git commit -m "Add Jest"
fi

yarn add --dev react-native-testing-library \
               react-test-renderer
git add .
git commit -m "Add react-native-testing-library"

yarn add --dev detox mocha
detox init -r mocha
if [ "$1" = "expo" ]; then
  yarn add --dev detox-expo-helpers expo-detox-hook

  curl https://dpq5q02fu5f55.cloudfront.net/Exponent-2.9.0.tar.gz -o Exponent.tar.gz
  mkdir -p bin/Exponent.app
  tar xzvf Exponent.tar.gz --directory bin/Exponent.app
  rm Exponent.tar.gz
  echo "bin/Exponent.app" >> .gitignore
fi
git add .
git commit -m "Add Detox with Mocha"

yarn add -D eslint \
            babel-eslint \
            eslint-config-codingitwrong \
            eslint-plugin-detox \
            eslint-plugin-import \
            eslint-plugin-jest \
            eslint-plugin-jsx-a11y \
            eslint-plugin-react
cp "${DIR}/template/.eslintrc.js" .eslintrc.js
git add .
git commit -m "Add ESLint"

rm e2e/firstTest.spec.js
cp "${DIR}/template/App.js" App.js
git add .
git commit -m "Remove boilerplate"

cp "${DIR}/template/.npmrc" .npmrc
git add .
git commit -m "Prevent package lock"
