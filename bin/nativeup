#!/usr/bin/env bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )/.."

if [ "$1" = "cli" ]; then
  react-native init $2
elif [ "$1" = "crna" ]; then
  create-react-native-app $2
elif [ "$1" = "expo" ]; then
  exp init -t blank $2
else
  echo "Unknown project type; enter one of: cli, crna, expo"
  exit 1
fi

cd $2
git init .
git add .
git commit -m "Create react native app with $1"

yarn add -D enzyme \
            enzyme-adapter-react-16 \
            @jonny/react-native-mock
mkdir -p tests
cp "${DIR}/template/tests/setup.js" tests/setup.js
git add .
git commit -m "Add Enzyme"

if [ "$1" = "cli" ]; then
  yarn add -D detox
  detox init -r jest
  git add .
  git commit -m "Add Detox"
fi

yarn add -D eslint@^4.19.1 \
            babel-eslint \
            eslint-config-codingitwrong \
            eslint-plugin-detox \
            eslint-plugin-import \
            eslint-plugin-jest \
            eslint-plugin-jsx-a11y \
            eslint-plugin-react
cp "${DIR}/template/.eslintrc.js" .eslintrc.js
git add .
git commit -m "Add ESLint"

rm e2e/firstTest.spec.js
cp "${DIR}/template/App.js" App.js
git add .
git commit -m "Remove boilerplate"

cp "${DIR}/template/.npmrc" .npmrc
git add .
git commit -m "Prevent package lock"
